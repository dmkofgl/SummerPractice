<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.2.xsd
                    http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
                    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.2.xsd">
    <context:component-scan base-package="com.books"></context:component-scan>
    <context:component-scan base-package="com.books.config.CustomContextListener"></context:component-scan>
    <context:component-scan base-package="com.books.utils.DatabaseCreator"></context:component-scan>
    <import resource="/springXML/daos.xml"/>
    <import resource="/springXML/services.xml"/>
    <import resource="/springXML/utils.xml"/>
    <import resource="/springXML/database.xml"/>
    <import resource="/springXML/thymeleaf.xml"/>
    <import resource="/springXML/secure.xml"/>

    <mvc:resources mapping="/styles/**" location="/css/" />
    <mvc:resources mapping="/images/**" location="/images/" />
    <mvc:resources mapping="/js/**" location="/js/" />
    <mvc:annotation-driven />

</beans>