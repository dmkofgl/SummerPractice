<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
        http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
        version="3.1">

    <welcome-file-list>
        <welcome-file>login.html</welcome-file>
    </welcome-file-list>

    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>com.books.servlets.filters.AuthenticationFilter</filter-class>
    </filter>


    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>HelloServlet</servlet-name>
        <servlet-class>com.books.servlets.HelloServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HelloServlet</servlet-name>
        <url-pattern>/Hello</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>BooksList</servlet-name>
        <servlet-class>com.books.servlets.BookListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BooksList</servlet-name>
        <url-pattern>/books/list</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>BookFilter</servlet-name>
        <servlet-class>com.books.servlets.BookFilterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BookFilter</servlet-name>
        <url-pattern>/books/search</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>BookEdit</servlet-name>
        <servlet-class>com.books.servlets.BookEditServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BookEdit</servlet-name>
        <url-pattern>/books/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>BookCreate</servlet-name>
        <servlet-class>com.books.servlets.BookCreateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BookCreate</servlet-name>
        <url-pattern>/books/new</url-pattern>
    </servlet-mapping>

    <listener>
        <listener-class>
            com.books.config.CustomContextListener
        </listener-class>
    </listener>


</web-app>
